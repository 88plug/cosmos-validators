{% if loan_balancing is defined and loan_balancing is sameas true %}
upstream {{ network }}-api {
    server http://127.0.0.1:{{custom_port_prefix}}17 max_fails=3 fail_timeout=30s;
    server http://127.0.0.1:{{custom_port_prefix}}17 backup;
}
{% endif %}
server {
    listen 80;
{% if type == 'test' %}
    server_name {{network}}-testnet-api.polkachu.com;
{% else %}
    server_name {{network}}-api.polkachu.com;
{% endif %}
    add_header Access-Control-Allow-Origin * always;
    add_header Access-Control-Allow-Headers * always;
    location / {
{% if no_rate_limit is defined and no_rate_limit is sameas true %}
        limit_req zone=limitreqsbyaddr burst=20 nodelay;
{% endif %}
{% if loan_balancing is defined and loan_balancing is sameas true %}
        proxy_pass      http://{{ network }}-api;
{% else %}
        proxy_pass http://127.0.0.1:{{custom_port_prefix}}17;
{% endif %}
    }
}