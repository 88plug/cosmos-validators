[Unit]
Description=MPC Signer node
After=network.target

[Service]
Type=simple
User={{ ansible_user }}
WorkingDirectory={{ ansible_facts['user_dir'] }}
ExecStart={{ ansible_facts['user_dir'] }}/go/bin/horcrux cosigner start
Restart=on-failure
RestartSec=3
LimitNOFILE=4096

[Install]
WantedBy=multi-user.target
