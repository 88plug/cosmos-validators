#!/bin/bash

# This is for crontab
# 0 0 * * * /bin/bash {{ user_dir }}/snapshot_{{ network }}.sh

# Make sure the service is running
sudo service {{ network }} start
sleep 5

# Get block height
BLOCK_HEIGHT=$(curl -s http://localhost:{{ custom_port_prefix }}657/status | jq -r .result.sync_info.latest_block_height)

# Stop service
sudo service {{ network }} stop

# Compress the folder
FILENAME=$(echo {{ network }}_${BLOCK_HEIGHT}.tar.lz4)
cd {{ user_dir }}/{{ folder }}
tar cvf - data | lz4 > "{{ user_dir }}/$FILENAME"

# Restart the service
sudo service {{ network }} start

# Transfer the file and then remove the file
cd {{ user_dir }}/
aws s3 --endpoint="{{ snapshot_endpoint }}" --acl="public-read" cp $FILENAME "s3://{{ snapshot_space }}/{{ network }}/"
rm $FILENAME
